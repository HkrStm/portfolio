<h3>スケジュール新規作成フォーム</h3>

<div>
    <%= form_with model:@post do |f| %>
        <table>
            <tr>
                <th><%= f.label :title ,"タイトル" %></th>
                <td><%= f.text_field :title, class:"input" %></td>
            </tr>
            <tr>
                <th><%= f.label :start_day ,"開始日" %></th>
                <td><%= f.date_field :start_day, class:"input" %></td>
            </tr>
            <tr>
                <th><%= f.label :end_day ,"終了日" %></th>
                <td><%= f.date_field :end_day, class:"input" %></td>
            </tr>
            <tr>
                <th><%= f.label :allday ,"終日" %></th>
                <td><%= f.check_box :allday %></td>
            </tr>
            <tr>
                <th><%= f.label :memo ,"備考" %></th>
                <td><%= f.text_area :memo, class:"input_textarea" %></td>
            </tr>
        </table>
        <% @post.errors.full_messages.each do |message| %>
            <div class="form_error">
              <%= message %>
            </div>
          <% end %>
        <div class="submit_btn"><%= f.submit "新規登録" %></div>
    <% end %>
</div>