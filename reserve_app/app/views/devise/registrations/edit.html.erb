<h2>アカウント編集</h2>

<div class="outer flex-col">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div>
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class="account-edit">
      <div class="account-box">
        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"input" %>
        </div>

        <div class="field">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, class:"" %>
        </div>

        <div class="field">
          <%= f.label :user_icon %><br />
          <%= f.file_field :user_icon, class:"input" %>
        </div>
      </div>
      <div class="account-box">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class:"input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> (空欄可 <%= @minimum_password_length %>字以上)<br />
          <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %> (確認用)<br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> (必須)<br />
          <%= f.password_field :current_password, autocomplete: "current-password", class:"input" %>
        </div>
      </div>
    </div>
    <div class="operation-box">
      <%= f.submit "変更" %>
    </div>
  <% end %>
</div>

<div class="operation-box">
  <h3>アカウント削除</h3>
  <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete %>
  <%= link_to "戻る", :back, class: "link" %>
</div>
